rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User data access rules
    match /users/{userId}/{document=**} {
      // Allow read/write access only to the user's own data
      allow read, write: if isOwner(userId);
    }
    
    // Specific rules for subcollections (more explicit, but covered by above)
    match /users/{userId}/chats/{chatId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/conversations/{conversationId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/journals/{journalId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/moods/{moodId} {
      allow read, write: if isOwner(userId);
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
